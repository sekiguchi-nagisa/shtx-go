assert_fake_source '  # ${parapemter:+word}
    echo "(${#:+huga})"
    echo "<${1:+hoge}>"
    echo "(${34:+bar})"
' '(huga)
<>
()' ''

assert_fake_source '  # ${parapemter+word}
    echo "(${#+huga})"
    echo "<${1+hoge}>"
    echo "(${34+bar})"
' '(huga)
<hoge>
()' ''

