#echo hello world # dummy for read

# RUN: call $cmd $self

source ../../shtx
source ../common/assert.ds

## IFS split (read command)
assert_fake_eval '
  IFS="#"
  "read" A B C < '"$SCRIPT_NAME"'
  printf -- "%s=(%s)\n" A "$A" B "$B" C "$C"
' 'A=()
B=(echo hello world )
C=( dummy for read)'

assert_fake_eval '
  unset IFS
  "read" A B C < '"$SCRIPT_NAME"'
  printf -- "%s=(%s)\n" A "$A" B "$B" C "$C"
  echo "<$IFS>"
  IFS=@
  echo "<$IFS>"
' 'A=(#echo)
B=(hello)
C=(world # dummy for read)
<>
<@>'


# CHECK: IFS=(@)
